<?xml version="1.0" encoding="utf-8"?>



<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context = ".MainActivity">>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="5dp"
        android:text="Top Picks" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_picks"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">

    </androidx.recyclerview.widget.RecyclerView>



    <LinearLayout
        style="@style/ClickableElement"
        android:id="@+id/hats_catagory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:onClick="viewCategory">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:src="@drawable/hats_category"
            android:scaleType="centerCrop"/>

        <TextView
            style="@style/HeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="HATS"
            android:layout_alignParentBottom="true" />


    </LinearLayout>

    <LinearLayout
        style="@style/ClickableElement"
        android:id="@+id/shirts_catagory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:onClick="viewCategory">

        <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:layout_margin="5dp"
        android:src="@drawable/shirt_category"
        android:scaleType="centerCrop"/>

        <TextView
            style="@style/HeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="SHIRTS"
            android:layout_alignParentBottom="true" />

    </LinearLayout>

    <LinearLayout
        style="@style/ClickableElement"
        android:id="@+id/pants_catagory"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_margin="20dp"
        android:onClick="viewCategory">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_margin="5dp"
            android:src="@drawable/pants_jeans"
            android:scaleType="centerCrop"/>

        <TextView
            style="@style/HeadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:text="PANTS"
            android:layout_alignParentBottom="true" />

    </LinearLayout>

        <LinearLayout
            style="@style/ClickableElement"
            android:id="@+id/shoes_catagory"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_margin="20dp"
            android:onClick="viewCategory">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_margin="5dp"
                android:src="@drawable/shoes_category"
                android:scaleType="centerCrop"/>

            <TextView
                style="@style/HeadingText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="SHOES"
                android:layout_alignParentBottom="true" />




    </LinearLayout>


</LinearLayout>
</ScrollView>